%div{ :style => "display:flex;flex-direction:row;" }
  - status_title = ""
  - bg_color = '#fff'
  - color = '#000'
  
  - if status == "pending_admin_review"
    - status_title = "Pending Review"
    - bg_color = "#333"
    - color = '#fff'

  - elsif status == "pending_user_changes"
    - status_title = "Pending Changes"
    - bg_color = "#ffc04d"
    - color = '#000'

  - elsif status == "rejected"
    - status_title = "Rejected"
    - bg_color = "#ff9280"
    - color = '#000'

  - elsif status == "approved"
    - status_title = "Approved"
    - bg_color = "#4de6ff"
    - color = '#000'

  - elsif status == "running"
    - status_title = "Running"
    - bg_color = "#337cff"
    - color = '#fff'

  - elsif status == "expired"
    - status_title = "Expired"
    - bg_color = "#ff005b"
    - color = '#fff'

  - elsif status == "sold"
    - status_title = "Sold"
    - bg_color = "#666"
    - color = '#fff'

  - elsif status == "archived"
    - status_title = "Archived"
    - bg_color = "#000"
    - color = '#fff'
  
  %span{ :style => "line-height:20px;font-weight:600;border-radius:6px;padding:1px 6px;font-size:12px;color:#{color};background-color:#{bg_color};" }= status_title