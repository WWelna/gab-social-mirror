%tr
  %td= account_warning.id
  %td= Formatter.instance.linkify(account_warning.text)
  %td
    - bg_color = 'transparent'
    - color = '#fff'
    - if account_warning.action == "soft_suspend"
      - bg_color = "#D17769"
      - color = '#fff'
    - elsif account_warning.action == "suspend"
      - bg_color = "#DF7164"
      - color = '#fff'
    %span{ :style => "line-height:20px;font-weight:600;border-radius:6px;padding:1px 6px;font-size:12px;color:#{color};background-color:#{bg_color};" }= account_warning.action
  %td= admin_account_link_to account_warning.target_account
  %td= admin_account_link_to account_warning.account
  %td
    %time.formatted{ datetime: account_warning.created_at.iso8601 }= l account_warning.created_at
